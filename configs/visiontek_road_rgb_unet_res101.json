{
	"model": "UNet",
	"num_classes": 1,
	"loader_name": "Visiontek_rgb_loader",

	"trainer":
    {
		"name": "visiontek_road_rgb_unet_res101",

		"use_gpu": true,

		"cudnnBenchmarkFlag": true,

		"resume_path": null,

        "epochs": 100,
        "save_dir": "saved/", 
        "save_period": 10, 
        
		"loss": "NLL_DiceLoss",
		"optimizer": {
			"type": "SGD",
			"lr": 1e-1
		},

		"metrics": ["iou"],

        "val": true,

        "val_per_epochs": 2,
        "break_for_grad_vanish": 5,
        "save_per_epochs": 2,
        "loss_descend": 3,

        "tensorboard": true,
        "log_dir": "saved/runs"  
    },

	"train_loader": {
		"data_dir": "./data/road/train",
		
		"args": {
			"batch_size": 8,
			"shuffle": true,
			"num_workers": 8,
			"sampler": null
		},

		"augment": {
			"applyAugment": true,
			"augment_method": ["HorizontalFlip", "VerticalFlip", "Rotation", "Crop", "Scale"],

			"args": {
				"HorizontalFlip": {
					"probability": 0.5
				},
				"VerticalFlip": {
					"probability": 0.5
				},
				"Translation": {
					"probability": 0.5,
					"factor": 0.8
				},
				"Rotation": {
					"probability": 0.5
				},
				"Crop": {
					"probability": 0.5
				},
				"Scale": {
					"size": [1024, 1024]
				}
			}
		}
	},
	
	"val_loader": {
		"data_dir": "./data/road/val",

		"args":{
			"batch_size": 8,
			"shuffle": false,
			"num_workers": 8
		},

		"augment": {
			"applyAugment": true,
			"augment_method": ["Scale"],

			"args": {
				"Scale": {
					"size": [1024, 1024]
				}
			}
		}
	}
}