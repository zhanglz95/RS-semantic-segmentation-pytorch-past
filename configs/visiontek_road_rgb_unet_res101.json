{
	"name": "visiontek_road_rgb_unet_res101",

	"use_gpu": true,

	"model": "UNet",

	"loader_name": "Visiontek_rgb_loader",

	"train_loader": {
		"data_dir": "",
		"batchsize": 8,
		"shuffle": true,
		"augment": true,
		"scale": true,
		"flip": true,
		"rotate": true,
		"num_workers": 8
	},
	
	"valid_loader": {
		"data_dir": "",
		"batchsize": 8, 
		"num_workers": 8
	},

	"optimizer": {
		"type": "SGD",
		"lr": 1e-3
	},

	"loss": "dice_bce_loss",

	"trainer": {
        "epochs": 80,
        "save_period": 10
	}
}