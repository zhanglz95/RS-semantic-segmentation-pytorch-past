{
	"name": "visiontek_road_rgb_unet_res101",

	"n_gpu": 4,

	"model": "UNet",

	"loader_name": "Visiontek_rgb_loader",

	"train_loader": {
		"data_dir": "./data/visiontek/road/train",
		"augment": true,

		"args": {
			"batch_size": 8,
			"shuffle": true,
			"num_workers": 8
		}
	},
	
	"val_loader": {
		"data_dir": "./data/visiontek/road/val",
		"augment": false, 

		"args":{
			"batch_size": 8,
			"shuffle": false,
			"num_workers": 8
		}
	},

	"optimizer": {
		"type": "SGD",
		"lr": 1e-3
	},

	"loss": "dice_bce_loss",

	"trainer": {
        "epochs": 80,
        "save_period": 10
	}
}