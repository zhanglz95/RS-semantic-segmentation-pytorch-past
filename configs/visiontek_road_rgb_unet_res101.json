{
	"model": "UNet",
	"num_classes": 1,
	"loader_name": "Visiontek_rgb_loader",

	"train_loader": {
		"data_dir": "./data/visiontek/road/train",
		
		"args": {
			"batch_size": 1,
			"shuffle": true,
			"num_workers": 0,
			"sampler": null
		},

		"augment": {
			"applyAugment": true,
			"augment_method": ["Scale"],

			"args": {
				"HorizontalFlip": {},
				"VerticalFlip": {},
				"Scale": {
					"size": [512, 512]
				},
				"Translation": {
					"factor": 0.2
				},
				"Rotation": {
					"angle": 10
				},
				"Crop": {
					"corner": [0, 0],
					"size": [1024, 1024]
				}
			}
		}
	},
	
	"val_loader": {
		"data_dir": "./data/visiontek/road/valid",

		"augment": {
			"applyAugment": true,
			"augment_method": ["Scale"],

			"args": {
				"HorizontalFlip": {},
				"VerticalFlip": {},
				"Scale": {
					"size": [512, 512]
				},
				"Translation": {
					"factor": 0.2
				},
				"Rotation": {
					"angle": 10
				},
				"Crop": {
					"corner": [0, 0],
					"size": [300, 300]
				}
			}
		},

		"args":{
			"batch_size": 1,
			"shuffle": false,
			"num_workers": 0
		}
	},


	"trainer":
    {
		"name": "visiontek_road_rgb_unet_res101",

		"use_gpu": false,

		"cudnnBenchmarkFlag": true,

		"resume_path": null,

        "epochs": 100,
        "save_dir": "saved/", 
        "save_period": 10, 
        
		"loss": "MultiClassDiceLoss",
		"optimizer": {
			"type": "SGD",
			"lr": 1e-1
		},

		"metrics": ["iou"],

        "val": true,

        "early_stop": 10,
        "log_per_iter": 10,
        "val_per_epochs": 1,
        "break_for_grad_vanish": 3,
        "save_per_epochs": 1,

        "tensorboard": true,
        "log_dir": "saved/runs"
        
    }
}