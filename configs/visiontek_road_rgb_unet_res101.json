{

	"n_gpu": 4,

	"model": "UNet",

	"loader_name": "Visiontek_rgb_loader",

	"train_loader": {
		"data_dir": "./data/visiontek/road/train",

		"augment": {
			"applyAugment": true,
			"augment_method": {
				"HorizontalFlip": true,
				"VerticalFlip": true,
				"Translation": true,
				"Rotation": true,
				"Crop": true,
				"Scale": true
			},
			"args": {
				"HorizontalFlip": {},
				"VerticalFlip": {},
				"Scale": {
					"size": [1024, 1024]
				},
				"Translation": {
					"factor": 0.2
				},
				"Rotation": {
					"angle": 10
				},
				"Crop": {
					"corner": [0, 0],
					"size": [300, 300]
				}
			}
		},

		"args": {
			"batch_size": 1,
			"shuffle": true,
			"num_workers": 0
		}
	},
	
	"val_loader": {
		"data_dir": "./data/visiontek/road/val",

		"augment": {
			"applyAugment": false,
			"augment_method": {
				"HorizontalFlip": true,
				"VerticalFlip": true,
				"Translation": true,
				"Rotation": true,
				"Crop": true,
				"Scale": true
			},
			"args": {
				"HorizontalFlip": {},
				"VerticalFlip": {},
				"Scale": {
					"size": [1024, 1024]
				},
				"Translation": {
					"factor": 0.2
				},
				"Rotation": {
					"angle": 10
				},
				"Crop": {
					"corner": [0, 0],
					"size": [300, 300]
				}
			}
		},

		"args":{
			"batch_size": 8,
			"shuffle": false,
			"num_workers": 8
		}
	},


	"trainer":
    {
		"name": "visiontek_road_rgb_unet_res101",

		"resume":false,
		"resume_path":"",
        "epochs": 100,
        "save_dir": "saved/", 
        "save_period": 10, 
        
		"loss": "BCELoss",
		"optimizer": {
			"type": "SGD",
			"lr": 1e-3
		},
		"lr_scheduler": {
			"type": "StepLR",
			"step_size": 30
		},

        "monitor": 
        {
            "mode": "MIN", 
            "metric": "MEAN_IOU"
        },

        "early_stop": 10,
        "log_per_iter": 10,
        "val_per_epochs": 1,
        "break_for_grad_vanish": 3,
        "save_per_epochs": 1,

        "checkpoints_path": "saved/checkpoints_path",

        "tensorboard": true,
        "log_dir": "saved/runs",
        
        "val": true,
        "val_per_epoch": 5 
    }
}